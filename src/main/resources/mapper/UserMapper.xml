<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 对应UserMapper接口的全类名 -->
<mapper namespace="com.comic.mapper.UserMapper">

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" parameterType="String" resultType="com.comic.entity.User">
        SELECT * FROM t_user WHERE username = #{username}
    </select>

    <!-- 新增用户 -->
    <insert id="insert" parameterType="com.comic.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_user (username, password, nickname, email, avatar, role, status)
        VALUES (#{username}, #{password}, #{nickname}, #{email}, #{avatar}, #{role}, #{status})
    </insert>
</mapper>