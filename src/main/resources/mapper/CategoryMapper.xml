<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.comic.mapper.CategoryMapper">
    <select id="selectAll" resultType="com.comic.entity.Category">
        SELECT * FROM t_category ORDER BY sort DESC
    </select>

    <select id="selectById" parameterType="Integer" resultType="com.comic.entity.Category">
        SELECT * FROM t_category WHERE id = #{id}
    </select>
</mapper>